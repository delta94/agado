{
  "name": "agado",
  "version": "1.0.0",
  "description": "Agado backend API",
  "main": "build/index.js",
  "scripts": {
    "start": "TZ=UTC node ./build/index.js",
    "migrate": "knex migrate:latest",
    "test": "TZ=UTC jest --forceExit --runInBand --testPathIgnorePatterns util.ts",
    "test-coverage": "TZ=UTC jest --forceExit --runInBand --testPathIgnorePatterns util.ts --coverage --collectCoverageFrom=src/**/*.ts",
    "test-coverage-ci": "TZ=UTC jest --forceExit --runInBand --testPathIgnorePatterns util.ts --coverage --collectCoverageFrom=src/**/*.ts --coverageReporters=json && mv coverage/coverage-final.json coverage/coverage.json",
    "lint": "tslint --project . --config tslint.json",
    "build": "tsc -p src",
    "gcp-build": "tsc -p src",
    "migrate-db": "knex migrate:latest",
    "clean": "rm -rf ./build/*"
  },
  "author": "agado",
  "license": "ISC",
  "devDependencies": {
    "coveralls": "^3.0.2",
    "jest": "^23.5.0",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^23.3.1",
    "@types/jquery": "^3.3.29",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.14.20",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.31",
    "@types/node": "^10.7.0",
    "@types/supertest": "^2.0.5",
    "bcrypt": "^3.0.3",
    "dotenv": "^6.1.0",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.15.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "pg": "^7.8.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  }
}
