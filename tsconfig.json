{
  "compilerOptions": {
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSourceMap": true
  }
}
